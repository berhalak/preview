{
  "name": "@berhalak/preview",
  "version": "1.0.0",
  "description": "A CLI tool to preview HTML, JS, and TS files in an Electron window with auto-reload",
  "main": "src/main.js",
  "bin": {
    "preview": "./bin/preview.js"
  },
  "scripts": {
